<div class="mt-4 pb-4">
  <div class="row">

    {{#each courses}}
      <div class="col-sm-6 col-lg-3 mt-4">
        <div class="card">
          <a href="courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.name}}"
            />
          </a>
          <div class="card-body">
            <a href="courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text" style="height: 70px;">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Buy now</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>